# Ports
SMTP_PORT=25
SUBMISSION_PORT=587
SMTPS_PORT=465
SMTP_ALT_PORT=2525
IMAP_PORT=143
IMAPS_PORT=993
POP3_PORT=110
POP3S_PORT=995
HTTP_PORT=8080

# Server hostname
HOSTNAME=mail.example.com

